<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <faonni_bitcoin>
                <active>1</active>
                <model>Faonni\Bitcoin\Model\Payment</model>
                <title>Bitcoin</title>
                <payment_action>authorize_capture</payment_action>
                <visible_on_cart>1</visible_on_cart>
                <order_status>pending_payment</order_status>
                <host>127.0.0.1</host>
                <port>8332</port>
                <ssl>0</ssl>
                <user></user>
                <pass backend_model="Magento\Config\Model\Config\Backend\Encrypted"></pass>
                <confirm>6</confirm>
                <expire>14</expire>
                <sort_order>167</sort_order>
                <allowspecific>0</allowspecific>
            </faonni_bitcoin>
        </payment>
    </default>
</config> 
